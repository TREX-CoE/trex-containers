BootStrap: docker
From: ubuntu:22.04

%labels
    Author scemama@irsamc.ups-tlse.fr

%arguments
   apt_cacher="no"

%help
    Container for running QMC=Chem.

%environment
    export LANG="C"
    export LANGUAGE=$LANG
    export LC_ALL=$LANG
    export OMP_NUM_THREADS=1

%setup
    mkdir -p ${APPTAINER_ROOTFS}/opt/install
    cp environment.sh  ${APPTAINER_ROOTFS}/opt/
    cp qmcchem.def \
       ../src/install_compilers.sh           \
       ../src/install_qmcchem.sh            \
       ../src/install_trexio_python.sh \
       ../src/install_trexio.sh        \
       ../src/install_qmckl.sh         \
       ../src/cleanup_compilers.sh           \
       ../src/setup_image.sh           \
       ../src/cleanup.sh \
       ${APPTAINER_ROOTFS}/opt/install

%post
    ARCH=$(uname -i)
    export APT_CACHER={{ apt_cacher }}

    cd /opt/install
    ./setup_image.sh

    ./install_compilers.sh
    ./install_trexio.sh
    ./install_trexio_python.sh
    ./install_qmckl.sh
    ./install_qmcchem.sh
    ./cleanup_compilers.sh

    ./cleanup.sh

%test
    ls /usr/bin/qmc || exit 1
    ls /usr/bin/qmcchem || exit 1

